<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Appender para consola -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Appender para archivo (opcional) -->
        <File name="FileAppender" fileName="logs/gateway-simulator.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

    <!-- RollingFileAppender con fecha en el nombre -->
    <!--<RollingFile name="RollingFileAppender"
                 fileName="logs/gateway-simulator.log"
                 filePattern="logs/gateway-simulator-%d{yyyy-MM-dd-HH-mm-ss}.log">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        <Policies>
             Rotar al iniciar la aplicación
            <OnStartupTriggeringPolicy />
           Rotar cuando el archivo llegue a 10MB
            <SizeBasedTriggeringPolicy size="10MB"/>
            Rotar diariamente
            <TimeBasedTriggeringPolicy />
        </Policies>
         Mantener máximo 30 archivos
        <DefaultRolloverStrategy max="30"/>
    </RollingFile>-->

    </Appenders>


    <Loggers>
        <!-- Logger específico para tu paquete -->
        <Logger name="org.example" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="RollingFileAppender"/>
            <AppenderRef ref="FileAppender"/>-->
        </Logger>

        <!-- Logger raíz -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>

        </Root>
    </Loggers>
</Configuration>